JNB_PORT=' '
REPO_PATH=/docker_volumes/exploreQML
DATA_VAULT=/docker_volumes/dataVault


echo "The number of arguments is: $#"
#  encoded variables:    jnb
for var in "$@"; do
  echo "The length of argument '$var' is: ${#var}"
  if [[ "jnb" ==  $var ]];  then
      #JNB_PORT="    --publish 8833:8833 "
