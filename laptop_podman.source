     echo added  $JNB_PORT
     echo "  cd notebook;  jupyter notebook --ip 0.0.0.0 --no-browser --allow-root --port  8833 "
  fi
  # ... more ...
done
    
podman run -it \
       --volume $REPO_PATH/qiskit:/wrk \
        --volume $REPO_PATH/python:/python \
       --volume $DATA_VAULT:/dataVault \
       --workdir /wrk \
       --user $(id -u):$(id -g) \
       $JNB_PORT \
       $IMG /bin/bash

